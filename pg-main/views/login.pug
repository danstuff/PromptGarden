extends layout 

block main 
  .d-flex.align-items-center.py-4(style='height: 100vh;')
    main.form-signin.w-100.m-auto(style='max-width: 330px')
      form(action='/user')
        .d-flex.flex-column.align-items-center.p-2.w-100
          svg.bi.me-2(width='64', height='64', role='img')
            use(xlink:href='bootstrap-icons.svg#flower1')
          block title
            h1.h3.mb-3.fw-normal Sign In

        .form-floating
          input#floatingInput.form-control(type='email', placeholder='name@example.com')
          label(for='floatingInput') Email address
        .form-floating
          input#floatingPassword.form-control(type='password', placeholder='Password')
          label(for='floatingPassword') Password
        block repeat

        .btn-group-vertical.w-100.mt-3(role='group')
          block submit
            button.btn.btn-primary.w-100.py-2(type='submit') Sign in
            button.btn.btn-secondary.w-100.py-2(type='submit') Create Account